{
  "name": "vite-lib-template",
  "version": "0.1.0",
  "description": "vite lib",
  "repository": "https://github.com/naivemap/vite-lib-template",
  "keywords": [],
  "author": "huangli",
  "license": "MIT",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js"
    }
  },
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm-run-all build:*",
    "build:umd": "vite build",
    "build:es": "tsc",
    "prepublishOnly": "npm-run-all build:*",
    "eslint:comment": "使用 ESLint 检查并自动修复 src 目录下所有扩展名为 .js 和 .ts 的文件",
    "eslint": "eslint --ext .js,.ts --ignore-path .gitignore --fix \"src/**/*.ts\"",
    "prettier:comment": "自动格式化当前目录下的所有文件",
    "prettier": "prettier .  --write",
    "commit:comment": "引导设置规范化的提交信息",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "git-cz": "^4.9.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  }
}
