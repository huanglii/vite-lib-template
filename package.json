{
  "name": "vite-lib-template",
  "version": "0.1.0",
  "description": "vite lib",
  "repository": "https://github.com/naivemap/vite-lib-template",
  "keywords": [],
  "author": "huangli",
  "license": "MIT",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.js",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js"
    }
  },
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "test": "jest ./test/",
    "build:umd": "vite build",
    "build:es": "tsc",
    "build": "npm-run-all build:umd build:es",
    "api-extractor": "npx api-extractor run --local --verbose",
    "api-documenter": "api-documenter markdown -i ./temp/ -o ./docs/",
    "build:docs": "npm-run-all build api-extractor api-documenter",
    "prepublishOnly": "npm-run-all build:umd build:es",
    "eslint": "eslint --ext .js,.ts --ignore-path .gitignore --fix \"src/**/*.ts\"",
    "prettier": "prettier .  --write",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "lint-staged": {
    "*.{js,ts,vue}": [
      "npm run eslint",
      "npm run prettier"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.3.0",
    "@commitlint/config-conventional": "^17.3.0",
    "@microsoft/api-documenter": "^7.19.25",
    "@microsoft/api-extractor": "^7.33.6",
    "@types/jest": "^29.2.4",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "commitizen": "^4.2.5",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-tsdoc": "^0.2.17",
    "git-cz": "^4.9.0",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "lint-staged": "^13.0.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.0",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3",
    "vite": "^3.2.4"
  }
}
